<header>
  <h1>Cardslap <span><%= @deck.name %></span></h1>
  <nav>
    <%= link_to 'Create card', [:new, @deck, :card], :class => "create-link" %>
    <%= link_to "Back", decks_path, :class => "back" %>
  </nav>
</header>

<ul class="cards">
  <% @cards.each do |card| %>
    <li>
      <span class="front"><%= card.front %></span>
      <% uri = URI.parse(card.back) %>
      <% if %w(http https).include?(uri.scheme) %>
        <span class="back image"><img src="<%= card.back %>" /></span>
      <% else %>
        <span class="back"><%= card.back %></span>
      <% end %>
    </li>
  <% end %>
</ul>
