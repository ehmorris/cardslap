<ol>
  <% @shares.all.each do |share| %>
    <li><%= share.email %> <%= link_to 'delete', [@deck, share], :method => :delete %></li>
  <% end %>
</ol>

<%= form_for [@deck, @share] do |form| %>
  <%= form.text_field :email, :placeholder => 'email' %>
  <%= form.submit 'Share deck' %>
<% end %>

<p>We'll send them a link and cc you.</p>
