<!DOCTYPE html>
<html>
<head>
  <title>Cardslap</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(function() {
      $('.cards li').click(function() {
        $(this).toggleClass('flip');
      });
    });
  </script>
</head>
<body>
  <div class="wrapper">
    <header>
      <% if @deck %>
        <h1><a href="<%= decks_path %>">Cardslap</a> <span><%= @deck.name %></span></h1>
      <% else %>
        <h1>Cardslap</h1>
      <% end %>
    </header>
    <%= yield %>
  </div>
</body>
</html>
