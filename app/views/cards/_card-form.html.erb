<%= form_for [deck, card], :html => { :class => 'card-form' }, :remote => true do |form| %>
  <div class="entries">
    <%= form.text_area :front, :placeholder => 'Front - to use an image, paste in the url' %>
    <%= form.text_area :back, :placeholder => 'Back - to use an image, paste in the url' %>
  </div>
  <%= form.submit :value => '+' %>
<% end %>
