<!DOCTYPE html>
<html>
<head>
  <title>Cardslap</title>
  <%= stylesheet_link_tag "application" %>
  <script type="text/javascript" src="//use.typekit.net/jsr1pts.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1.0"/>
</head>
<body class="<% if flash[:notice] %>flash<% end %>">
  <div class="wrapper">
    <header>
      <h1>
        <a class="logo" href="<%= root_path %>">Cardslap</a>
        <span><%= header_deck_link %></span>
      </h1>
    </header>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
      <div class="clearfix"></div>
    <% end %>
    <% if signed_in? %>
      <%= yield %>
      <footer>
        <p><%= current_user.email %> <%= link_to 'sign out', sign_out_path, :method => :delete %>, <%= link_to 'account settings', account_path %></p>
      </footer>
    <% else %>
      <%= yield %>
    <% end %>
  </div>
</body>
</html>
