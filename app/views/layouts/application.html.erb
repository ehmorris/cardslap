<!DOCTYPE html>
<html>
<head>
  <title>Cardslap</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(function() {
      $('.cards li').click(function() {
        $(this).toggleClass('flip');
      });
    });
  </script>
</head>
<body>
  <div class="wrapper">
    <header>
      <% if @deck.id %>
        <h1><a href="<%= decks_path %>">Cardslap</a> <span><%= link_to @deck.name, deck_path(@deck) %></span></h1>
      <% else %>
        <h1>Cardslap</h1>
      <% end %>
    </header>
    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
