<header>
  <h1>Cardslap <span><%= @deck.name %></span></h1>
  <nav>
    <%= link_to "Back", decks_path, :class => "back" %>
  </nav>
</header>

<%= form_for [@deck, @card] do |form| %>
  <div>
    <%= form.label :front %>
    <%= form.text_area :front %>
  </div>
  <div>
    <%= form.label :back %>
    <%= form.text_area :back %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
